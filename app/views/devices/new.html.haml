- model_class = Device

.page-header
  %h1=t '.title', default: [:'helpers.titles.new', 'New %{model}'], model: model_class.model_name.human.titleize

= simple_form_for @device do |f|
  .row
    .col-md-4
      = f.input :name
      = f.input :location
      = f.input :transport, collection: TRANSPORTS
      = f.input :device_eui, hint: "Alleen nodig voor LoRa."

      = f.button :submit, class: 'btn-primary'
      = link_to t('.cancel', default: t("helpers.links.cancel")), @device, class: 'btn btn-default'
