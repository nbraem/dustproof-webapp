- content_for(:title) do
  Pakketverlies
  &ndash;
  Overzicht per uur

- content_for :scripts do
  :javascript
    $(function () {
        var options1 = {
            chart: {
              zoomType: 'x',
              type: 'column',
              renderTo: 'container1'
            },
            title: {
              text: 'Pakketverlies'
            },
            xAxis: {
              type: 'datetime',
              title: {
                text: 'Tijdstip'
              },
              dateTimeLabelFormats: {
                day: '%a %e %b'
              }
            },
            yAxis: {
              title: {
                  text: 'Verloren metingen'
              }
            },
            plotOptions: {
                series: {
                    borderWidth: 0,
                    dataLabels: {
                        enabled: true
                    }
                }
            },
            tooltip: {
              valueDecimals: 0,
              dateTimeLabelFormats: {
                millisecond: "%A, %b %e, %H:%M:%S.%L",
                second: "%A, %b %e, %H:%M:%S",
                minute: "%A, %b %e, %H:%M",
                hour: "%e %b %H:%M",
                day: "%A, %b %e, %Y",
                week: "Week van %A, %b %e, %Y",
                month: "%B %Y",
                year: "%Y"
              }
            },
            legend: {
              enabled: false
            },
            series: [{
              name: 'Verloren metingen',
              data: #{@losses.map{|m| [m.chart_datetime, m.hourly_loss]}}
            }]
        };

        var chart1 = new Highcharts.Chart(options1);
    });

.page-header
  %h1
    Verloren metingen
    %small Overzicht per uur

.row
  .col-lg-12
    = search_form_for @q do |f|
      .row
        .col-sm-4
          = f.input :device_id_eq, as: :select, collection: Device.order(name: :asc), label_method: :name_with_id, include_blank: false, input_html: { class: "input-sm" }, required: false, label: "Filter device:"

.row
  .col-lg-12
    #container1{style: "min-width: 310px; height: 500px; margin: 0 auto"}
