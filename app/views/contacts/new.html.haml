- content_for(:title) do
  Contact

.page-header
  %h1 Contact

.row
  .col-md-6
    = simple_form_for @contact, wrapper: :vertical_form, html: { autocomplete: "off" } do |f|
      .row
        .col-sm-10
          = f.input :name
          = f.input :email
          = f.input :message, as: :text, input_html: { rows: 7 }

      %hr
        = f.button :submit, "Versturen", class: 'btn-primary'
        = link_to "Annuleren", root_url, class: 'btn btn-default'
