.row
  .col-sm-4.col-sm-offset-4
    .page-header
      %h2= t("devise.forgot_password")
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, autocomplete: "off" }) do |f|
      = f.input :email, required: true, autofocus: true, label: false, placeholder: User.human_attribute_name(:email)
      = f.button :submit, t("devise.send_password_reset_instructions"), class: "btn btn-primary btn-block"

    %p= render "devise/shared/links"
