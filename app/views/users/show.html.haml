- model_class = User
.page-header
  %h1
    = @user.full_name
    %small= t '.title', default: model_class.model_name.human.titleize

.row
  .col-lg-3
    .row
      .col-sm-4.col-lg-12
        .well
          = link_to icon_text("pencil", t('.edit', default: t("helpers.links.edit"))), edit_user_path(@user), class: 'btn btn-warning btn-block'
          = link_to icon_text("trash-o", t('.destroy', default: t("helpers.links.destroy"))), user_path(@user), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger btn-block'

  .col-lg-9
    %p
      %strong= model_class.human_attribute_name(:email)
      %br
      = mail_to @user.email

